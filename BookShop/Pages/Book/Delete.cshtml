@page
@model BookShop.Pages.Book.DeleteModel
@{
    ViewData["Title"] = "Delete Book";
}

<h1>Delete Book</h1>
<h3>Are you sure you want to delete this?</h3>
<hr />
<div>
    <dl class="row">
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Book.BookTitle)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Book.BookTitle)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Book.BookAuthor)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Book.BookAuthor)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Book.BookDescription)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Book.BookDescription)</dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Book.BookId" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>
