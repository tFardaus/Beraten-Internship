@page
@model BookShop.Pages.Book.DeleteModel
@{
    ViewData["Title"] = "Delete Book";
}

<h1>Delete Book</h1>
<h3>Are you sure you want to delete this?</h3>
<hr />
<div id="message" class="alert" style="display:none;"></div>
<div id="bookDetails">
    <dl class="row">
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Book.BookTitle)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Book.BookTitle)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Book.BookAuthor)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Book.BookAuthor)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Book.BookDescription)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Book.BookDescription)</dd>
    </dl>
    
    <form id="deleteBookForm" method="post">
        <input type="hidden" asp-for="Book.BookId" id="bookId" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#deleteBookForm').on('submit', function(e) {
                e.preventDefault();
                
                var bookId = $('#bookId').val();
                
                $.ajax({
                    url: '/api/books/' + bookId,
                    type: 'DELETE',
                    success: function(response) {
                        $('#bookDetails').hide();
                        $('#message').removeClass('alert-danger').addClass('alert-success')
                            .text(response.message + ' Redirecting...').show();
                        setTimeout(function() {
                            window.location.href = '/Book/Index';
                        }, 1500);
                    },
                    error: function(xhr) {
                        $('#message').removeClass('alert-success').addClass('alert-danger')
                            .text('Error deleting book.').show();
                    }
                });
            });
        });
    </script>
}
