@page
@model BookShop.Pages.Category.DeleteModel
@{
    ViewData["Title"] = "Delete Category";
}

<h1>Delete Category</h1>
<h3>Are you sure you want to delete this?</h3>
<hr />
<div id="message" class="alert" style="display:none;"></div>
<div id="categoryDetails">
    <dl class="row">
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Category.Name)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Category.Name)</dd>
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Category.Description)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Category.Description)</dd>
    </dl>
    <form id="deleteCategoryForm" method="post">
        <input type="hidden" asp-for="Category.CategoryId" id="categoryId" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#deleteCategoryForm').on('submit', function(e) {
                e.preventDefault();
                var categoryId = $('#categoryId').val();
                $.ajax({
                    url: '/api/categories/' + categoryId,
                    type: 'DELETE',
                    success: function(response) {
                        $('#categoryDetails').hide();
                        $('#message').removeClass('alert-danger').addClass('alert-success')
                            .text(response.message + ' Redirecting...').show();
                        setTimeout(function() { window.location.href = '/Category/Index'; }, 1500);
                    },
                    error: function() {
                        $('#message').removeClass('alert-success').addClass('alert-danger').text('Error deleting category.').show();
                    }
                });
            });
        });
    </script>
}
