@page
@model BookShop.Pages.Order.IndexModel
@{
    ViewData["Title"] = "Orders";
}

<h1>Orders List</h1>
<hr />
<a asp-page="Create" class="btn btn-success float-end">Create</a>
<table class="table table-responsive table-striped table-hover align-middle">
    <thead>
        <tr class="text-center">
            <th>Order ID</th>
            <th>Customer</th>
            <th>Order Date</th>
            <th>Total Amount</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model.Orders)
        {
            <tr class="text-center">
                <td>@order.OrderId</td>
                <td>@order.Customer?.Name</td>
                <td>@order.OrderDate.ToShortDateString()</td>
                <td>@order.TotalAmount tk</td>
                <td>@order.Status</td>
                <td>
                    <a asp-page="Edit" asp-route-id="@order.OrderId" class="btn btn-sm btn-primary">Edit</a>
                    <a asp-page="Delete" asp-route-id="@order.OrderId" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
