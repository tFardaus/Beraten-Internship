@page
@model BookShop.Pages.Publisher.IndexModel
@{
    ViewData["Title"] = "Publishers";
}

<h1>Publishers List</h1>
<hr />
<div class="row mb-3">
    <div class="col-md-6">
        <form method="get">
            <div class="input-group">
                <input type="text" name="searchTerm" value="@Model.SearchTerm" class="form-control" placeholder="Search by name..." />
                <button type="submit" class="btn btn-primary">Search</button>
                <a asp-page="./Index" class="btn btn-secondary">Clear</a>
            </div>
        </form>
    </div>
    <div class="col-md-6 text-end">
        <a asp-page="Create" class="btn btn-success">Create</a>
    </div>
</div>
<table class="table table-responsive table-striped table-hover align-middle">
    <thead>
        <tr class="text-center">
            <th>Name</th>
            <th>Address</th>
            <th>Phone</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var publisher in Model.Publishers)
        {
            <tr class="text-center">
                <td>@publisher.Name</td>
                <td>@publisher.Address</td>
                <td>@publisher.Phone</td>
                <td>
                    <a asp-page="Edit" asp-route-id="@publisher.PublisherId" class="btn btn-sm btn-primary">Edit</a>
                    <a asp-page="Delete" asp-route-id="@publisher.PublisherId" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
