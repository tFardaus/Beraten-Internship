@page
@model BookShop.Pages.ReflectModel
@{
    ViewData["Title"] = "Reflection";
}

<div class="container mt-4">
    <h2>Reflection</h2>
    
    <form method="post" class="mb-4">
        <div class="mb-3">
            <label class="form-label">Select a Class:</label>
            <select name="selectedClass" class="form-select">
                @foreach (var className in Model.AvailableClasses)
                {
                    <option value="@className">@className</option>
                }
            </select>
        </div>
        <button type="submit" class="btn btn-primary">Inspect Class</button>
    </form>

    @if (!string.IsNullOrEmpty(Model.Result))
    {
        <div class="card">
            <div class="card-header">
                <h5>Output</h5>
            </div>
            <div class="card-body">
                <pre>@Model.Result</pre>
            </div>
        </div>
    }
</div>
