@page
@model BookShop.Pages.Cart.IndexModel
@{
    ViewData["Title"] = "Shopping Cart";
}

<h1>ðŸ›’ Shopping Cart</h1>
<hr />

@if (!Model.CartItems.Any())
{
    <div class="alert alert-info">
        <h4>Your cart is empty!</h4>
        <p><a asp-page="/Book/Index" class="btn btn-primary">Continue Shopping</a></p>
    </div>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Book Title</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Total</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.CartItems)
            {
                <tr>
                    <td>@item.BookTitle</td>
                    <td>@item.Price tk</td>
                    <td>@item.Quantity</td>
                    <td>@item.Total tk</td>
                    <td>
                        <form method="post" asp-page-handler="Remove" asp-route-bookId="@item.BookId" style="display:inline;">
                            <button type="submit" class="btn btn-sm btn-danger">Remove</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <td colspan="3" class="text-end"><strong>Total Amount:</strong></td>
                <td><strong>@Model.TotalAmount tk</strong></td>
                <td></td>
            </tr>
        </tfoot>
    </table>

    <div class="mt-3">
        <a asp-page="/Book/Index" class="btn btn-secondary">Continue Shopping</a>
        <form method="post" asp-page-handler="Clear" style="display:inline;">
            <button type="submit" class="btn btn-warning">Clear Cart</button>
        </form>
        <button class="btn btn-success">Proceed to Checkout</button>
    </div>
}
