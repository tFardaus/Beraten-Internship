@page
@model BookShop.Pages.Author.DeleteModel
@{
    ViewData["Title"] = "Delete Author";
}

<h1>Delete Author</h1>
<h3>Are you sure you want to delete this?</h3>
<hr />
<div id="message" class="alert" style="display:none;"></div>
<div id="authorDetails">
    <dl class="row">
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Author.Name)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Author.Name)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Author.Biography)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Author.Biography)</dd>
    </dl>
    
    <form id="deleteAuthorForm" method="post">
        <input type="hidden" asp-for="Author.AuthorId" id="authorId" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#deleteAuthorForm').on('submit', function(e) {
                e.preventDefault();
                
                var authorId = $('#authorId').val();
                
                $.ajax({
                    url: '/api/authors/' + authorId,
                    type: 'DELETE',
                    success: function(response) {
                        $('#authorDetails').hide();
                        $('#message').removeClass('alert-danger').addClass('alert-success')
                            .text(response.message + ' Redirecting...').show();
                        setTimeout(function() {
                            window.location.href = '/Author/Index';
                        }, 1500);
                    },
                    error: function(xhr) {
                        $('#message').removeClass('alert-success').addClass('alert-danger')
                            .text('Error deleting author.').show();
                    }
                });
            });
        });
    </script>
}
