@page
@model BookShop.Pages.Author.DetailsModel
@{
    ViewData["Title"] = "Author Details";
}

<h1>Author Details</h1>
<hr />

@if (Model.AuthorInfo != null)
{
    <div class="card mb-4">
        <div class="card-header bg-primary text-white">
            <h4>@Model.AuthorInfo.AuthorName</h4>
        </div>
        <div class="card-body">
            <p><strong>Biography:</strong> @Model.AuthorInfo.Biography</p>
        </div>
    </div>

    <h3>Books by this Author</h3>
    <hr />

    @if (Model.Books.Any())
    {
        <table class="table table-striped table-hover table-responsive">
            <thead>
                <tr class="text-center">
                    <th>Title</th>
                    <th>Description</th>
                    <th>Price</th>
                    <th>Stock</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var book in Model.Books)
                {
                    <tr class="text-center">
                        <td>@book.BookTitle</td>
                        <td>@book.BookDescription</td>
                        <td>@book.Price tk</td>
                        <td>@book.Stock</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p class="text-muted">This author has not written any books yet.</p>
    }
}

<a asp-page="./Index" class="btn btn-secondary mt-3">Back to List</a>
